= form_for @pitch, :html => {:class => "form-horizontal"} do |f|
  - if @pitch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pitch.errors.count, "error")} prohibited this pitch from being saved:"
      %ul
        - @pitch.errors.full_messages.each do |msg|
          %li= msg

  %div.control-group
    .field
      .alert.alert-info.hide.pull-right
        Should be simple, short and memorable.
        %br
        Imagine explaining your pitch in a Tweet.
      = f.label :title
      = f.text_field :title


  %div.control-group
    .field
      .alert.alert-info.hide.pull-right
        Expand on your pitch. <br />Stay focused and be clear on what your <br />project hopes to accomplish.
        %br
        We recommend answering the following questions:
        %ul
          %li
            Who am I?
          %li
            What is the problem?
          %li
            What is my solution?
          %li
            What help do I need?
      = f.label :description
      = f.text_area :description

  %div.control-group
    .field
      .alert.alert-info.hide.pull-right
        You Tube URL for your Pitch
      = f.label :video_url
      = f.text_field :video_url

  %div.control-group
    .field
      .alert.alert-info.hide.pull-right
        Are you looking to connect with
        %br
        people in a specific location?
      = f.label :location
      = f.text_field :location

  %div.control-group
    .field
      = f.label :email
      = f.text_field :email

  %div.control-group
    .field
      = f.label :skill_list
      = f.text_field :skill_list

  %div.control-group
    .field
      = f.label :domain_list
      = f.text_field :domain_list

  %div.control-group
    .actions
      = f.submit 'Save', {class: "btn btn-primary slim-button"}


:javascript
  $(function() {
      $("#pitch_description").htmlarea({
          // Override/Specify the Toolbar buttons to show
          toolbar: [
              ["bold", "italic", "underline", "|", "p"],
              ["link", "unlink", "|", "image"]
          ],

      });
        $("input").focus(function() {
          $(this).parent().find(".alert").fadeIn('slow');
        }).blur(function() {
          $(this).parent().find(".alert").hide();
        });
        
        $("textarea").focus(function() {
          $(this).parent().find(".alert").fadeIn('slow');
        }).blur(function() {
          $(this).parent().find(".alert").hide();
        });
  });
