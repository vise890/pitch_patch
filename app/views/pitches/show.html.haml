%p#notice= notice


%header.page-header
  %hgroup
    %h1
      = @pitch.title
      %small#location
        = @pitch.location

#video.span8
  %iframe{:width => "100%", :height => "400px", :src => "#{youtube_embed_url @pitch.video_url}", :title => "YouTube video player", :allowscriptaccess => "always", :allowFullScreen => "true", :frameborder => "0"}


#side-bar.span3

  #actions
    %button.btn.btn-primary.btn-large{:name => "build"}
      Build it!
    #twitter
      %a.twitter-share-button{:href => "://twitter.com/share", :data => {:url => "http://www.pitchpatch.co", :via => "@pitchpatchapp", :lang => "en"}}
    %button.btn.btn-info.muted{:name => "follow"}
      Tell me when it starts!

  #tags.well.well-small
    %p I need a...
    - @pitch.skill_list.each do |skill|
      %span.label.label-info.tag= skill


%section.span8#description
  = raw @pitch.description
